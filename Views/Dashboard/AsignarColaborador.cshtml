@{
    ViewData["Title"] = "Asignar Colaborador";
    Layout = "_Layout";
}

<h2>Asignar Colaborador</h2>

<form asp-action="AsignarColaborador" method="post">
    <input type="hidden" name="idDocumento" value="@ViewBag.IdDocumento" />

    <div class="mb-3">
        <label for="colaborador" class="form-label">Seleccione un colaborador:</label>
        <select class="form-select" id="colaborador" name="idColaborador" required>
            <option value="">-- Seleccione --</option>
            @foreach (var colaborador in ViewBag.Colaboradores)
            {
                <option value="@colaborador.Value">@colaborador.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Asignar</button>
    <a asp-action="Detalle" asp-route-id="@ViewBag.IdDocumento" class="btn btn-secondary ms-2">Cancelar</a>
</form>
    